{
    "name": "Sample",
    "version": "1.5.3",
    "manifest_version": 2,
    "description": "Sample Chrome Extension",
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "/js/jsframe.js",
            "/js/main.js"
        ],
        "css": [
            "/style.css",
            "/all.min.css"

        ]

    }],
    "permissions": ["contextMenus", "storage", "unlimitedStorage", "activeTab"],
    "background": {
        "scripts": ["/js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "/icon_144.png",
        "default_title": "Ext title"
    },
    "commands": {
        "_execute_browser_action": {
            "description": "Activate the extension"
        }
    },
    // ローカルでfontawesomeを利用する / 参照：https://r17n.page/2020/07/04/chrome-extension-using-fontawesome/
    "web_accessible_resources": ["fonts/*"]
}